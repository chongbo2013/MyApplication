<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/btn_guide_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_guide_sys"
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="75.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/guide_frame" />

        <ImageView
            android:id="@+id/img_guide_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/img_guide_sys"
            android:layout_marginLeft="60.0dip"
            android:src="@drawable/guide_explain_down_sec" />

        <TextView
            android:id="@+id/txt_guide_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/img_guide_line2"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="5.0dip"
            android:text="@string/guide_open_direct_enter_system"
            android:textColor="@color/guide_white"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/txt_guide_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt_guide_desc2"
            android:layout_marginBottom="15.0dip"
            android:text="@string/guid_setting_warn1"
            android:textColor="@color/guide_white"
            android:textSize="15.0sp" />

    </RelativeLayout>
</RelativeLayout>